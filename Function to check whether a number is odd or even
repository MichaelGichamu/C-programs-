//function to check whether a number is even or odd
#include <stdio.h>
int evenodd(int number);
int main(){
int number,output;
  printf("\n Enter a number ");
  scanf("%d",&number);
    output = evenodd(number);
    return 0;
}
int evenodd(int number){
 if(number%2==0){
    printf("The number %d is even",number);
}
else{
    printf("The number %d is odd",number);
}
    return number;
}
